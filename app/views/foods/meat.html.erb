<p id="notice"><%= notice %></p>

<h1>Foods</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
      <% foodimage = food.name + ".jpg" %>
      <% if food.category == "meat" %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.category %></td>
            <td><%= link_to image_tag(foodimage, :alt => "image"), food %></td>
          </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', foods_path %>
