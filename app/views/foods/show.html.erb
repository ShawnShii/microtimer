<p>
  <strong>Name:</strong>
  <%= @food.name %>
</p>

<p>
  <strong>Time:</strong>
  <% if @food.time < 59 %>
    <%= @food.time %> seconds
  <% else %>  
    <% min = @food.time / 60 %>
    <% seconds = @food.time % 60 %>
    
      <% if seconds == 0 %>
        <%= min %> minutes
     <% else %>
       <%= min %> minutes <%= seconds %> seconds
      <% end %>
  <% end %>
</p>


